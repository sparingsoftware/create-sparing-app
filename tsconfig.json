{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2019",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "CommonJS"
  },
  "exclude": ["node_modules", "dist", "templates", "**/*.spec.ts"]
}
